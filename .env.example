# =================================================================
# rTSLA ARBITRAGE BOT CONFIGURATION
# =================================================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env (remove .example)
# 2. Fill in your actual values below
# 3. NEVER commit .env file to git!
#
# =================================================================

# =================================================================
# WALLET CONFIGURATION
# =================================================================
# SINGLE WALLET (for basic setup)
# Your Phantom wallet private key (as JSON array or base58)
# Get from: Phantom → Settings → Export Private Key
# Example: [123,45,67,89,...]
WALLET_PRIVATE_KEY=

# MULTIPLE WALLETS (for distributed trading - RECOMMENDED)
# Option 1: Comma-separated list
# WALLET_PRIVATE_KEYS=key1,key2,key3
WALLET_PRIVATE_KEYS=

# Option 2: Individual wallet env vars
# WALLET_1=your_first_private_key
# WALLET_2=your_second_private_key
# WALLET_3=your_third_private_key
# ... add as many as needed

# Wallet selection strategy
# Options: round_robin, highest_balance, least_used, random
# round_robin = rotate through wallets sequentially (default)
# highest_balance = use wallet with most USDC
# least_used = use wallet with fewest trades
# random = random selection
WALLET_SELECTION_STRATEGY=round_robin

# Solana RPC endpoint
# Free: https://api.mainnet-beta.solana.com
# Paid (recommended): Get from QuickNode, Helius, or Alchemy
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =================================================================
# TRADING PARAMETERS
# =================================================================
# Minimum spread percentage to execute trade
# Recommended: 0.8 for safety, 0.6 for more opportunities
MIN_SPREAD_PERCENT=0.8

# Trade amount in USDC (for automated arbitrage)
# Minimum recommended: 50 (to cover fees)
# Optimal: 100-500 (good profit/risk ratio)
# Advanced: 1000+ (requires more capital)
TRADE_AMOUNT_USDC=100

# How often to check prices (milliseconds)
# 10000 = 10 seconds (recommended)
# 5000 = 5 seconds (more aggressive)
POLL_INTERVAL_MS=10000

# Maximum acceptable slippage (%)
# Recommended: 0.5
MAX_SLIPPAGE_PERCENT=0.5

# =================================================================
# API KEYS (Optional but recommended)
# =================================================================
# Pyth Network API (free)
PYTH_API_URL=https://hermes.pyth.network/api

# Birdeye API key (optional - for backup price data)
# Get free key from: https://birdeye.so/
BIRDEYE_API_KEY=

# =================================================================
# TOKEN ADDRESSES (Solana Mainnet)
# =================================================================
# TSLAr tokenized Tesla stock mint address
# Find on: https://solscan.io/ (search for TSLAr)
RTSLA_MINT_ADDRESS=

# USDC mint address (Solana mainnet - don't change)
USDC_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# =================================================================
# PLATFORM ADDRESSES
# =================================================================
# Remora Markets - https://remoramarkets.xyz/
# Pool address for rTSLA/USDC
REMORA_POOL_ADDRESS=

# Flash Trade - https://flash.trade/
# Program ID and pool address
FLASH_TRADE_PROGRAM_ID=
FLASH_TRADE_POOL_ADDRESS=

# Port Finance - Flash loan provider
# Program ID for flash loans
PORT_FINANCE_PROGRAM_ID=
PORT_FINANCE_POOL_ADDRESS=

# =================================================================
# PYTH ORACLE CONFIGURATION
# =================================================================
# Pyth Network price feed for TESLA stock
# Find at: https://pyth.network/developers/price-feed-ids
# Price feed ID for TSLA/USD
PYTH_TSLA_FEED_ID=

# Pyth program ID (Solana mainnet - don't change)
PYTH_PROGRAM_ID=FsJ3A3u2vn5cTVofAjvy6y5kwABJAqYWpe4975bi2epH

# =================================================================
# SAFETY SETTINGS
# =================================================================
# Maximum gas price willing to pay (lamports)
# 5000 = ~$0.005 per transaction
MAX_GAS_PRICE_LAMPORTS=5000

# Circuit breaker: Max consecutive failures before stopping
MAX_CONSECUTIVE_FAILURES=3

# Minimum profit required to execute (USDC)
# Recommended: 0.5 to avoid gas-eating trades
MIN_PROFIT_THRESHOLD=0.5

# =================================================================
# MONITORING & ALERTS
# =================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable Telegram notifications (optional)
ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =================================================================
# ADVANCED SETTINGS (Don't change unless you know what you're doing)
# =================================================================
# Enable auto-execution (false = monitoring only)
AUTO_EXECUTE=false

# Use Jito MEV protection (recommended when available)
USE_JITO_BUNDLES=false

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=1

# Retry failed transactions
RETRY_FAILED_TRANSACTIONS=true
MAX_RETRIES=2
