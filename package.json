{
  "name": "rtsla-arbitrage-bot",
  "version": "1.0.0",
  "description": "Flash loan arbitrage bot for rTSLA tokenized stocks on Solana",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "monitor": "ts-node src/monitors/price-monitor.ts",
    "multi": "ts-node src/multi-token-bot.ts",
    "multi-dev": "nodemon --exec ts-node src/multi-token-bot.ts",
    "analyze": "ts-node src/utils/analyze-opportunities.ts",
    "dashboard": "ts-node src/dashboard/server.ts",
    "test:manual": "ts-node src/executors/manual-trader.ts",
    "test:flash": "ts-node src/executors/flash-loan-executor.ts",
    "setup": "npm install && npm run build"
  },
  "keywords": [
    "solana",
    "arbitrage",
    "flash-loan",
    "defi",
    "trading-bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "@pythnetwork/client": "^2.19.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "bs58": "^5.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/bs58": "^4.0.4",
    "@types/express": "^4.17.21",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
